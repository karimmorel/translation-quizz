<body>
<h1>List of languages</h1>

<div id="word-list">
    <ul>
        <% for(var key in languages) { %>
            <li>
            <a href="/<%= languages[key].slug %>"><%= languages[key].name %></a> : <%= languages[key].slug %> <%if (languages[key].main_language == false) { %><a href="/language/delete/<%= languages[key].id %>">delete</a><% } %>
            </li>
            <% } %>
    </ul>
</div>

<div id="block-add-word">
    <form action="/languages" method="post" class="form-add-translation"> 
        <label id="title-english-word">Language's name</label>
        <input type="text" name="name" id="english-word" autofocus>
        <br/>
        <label id="title-french-word">Language's slug</label>
        <input type="text" name="slug" id="french-word">
        <br/>
        <input type="submit" id="submit-words">
    </form>
</div>

</body>
